<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flatlyapps.budget3"
    android:versionCode="400"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.flatlyapps.budget3.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/MainActivityTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.flatlyapps.budget3.SettingsActivity"
            android:label="@string/activity_title_settings"
            android:parentActivityName="com.flatlyapps.budget3.MainActivity"
            android:theme="@style/SettingsActivityTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="com.flatlyapps.budget3.AboutUsActivity"
            android:label="@string/activity_title_about_us"
            android:parentActivityName="com.flatlyapps.budget3.MainActivity"
            android:theme="@style/AboutUsActivityTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="com.flatlyapps.budget3.startup.StartUpActivity"
            android:label="@string/activity_title_start_up"
            android:parentActivityName="com.flatlyapps.budget3.MainActivity"
            android:theme="@style/StartUpActivityTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="com.flatlyapps.budget3.card.activity.DocumentActivity"
            android:label="@string/activity_title_documents"
            android:parentActivityName="com.flatlyapps.budget3.MainActivity"
            android:theme="@style/DocumentActivityTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <receiver android:name="com.flatlyapps.budget3.service.BootBroadcast" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.flatlyapps.budget3.service.RecurringService"
            android:enabled="true" />

        <activity android:name="com.mikepenz.aboutlibraries.ui.LibsActivity" />
    </application>

</manifest>