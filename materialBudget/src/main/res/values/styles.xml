<resources>

    <style name="DarkActionBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/background_window</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
    </style>

    <style name="StartUpActivityTheme" parent="NoActionBarTheme">
        <item name="android:windowBackground">@color/background_window_start_up</item>
    </style>

    <style name="MainActivityTheme" parent="NoActionBarTheme"/>

    <style name="SettingsActivityTheme" parent="DarkActionBarTheme"/>

    <style name="AboutUsActivityTheme" parent="DarkActionBarTheme"/>

    <style name="DocumentActivityTheme" parent="DarkActionBarTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
    </style>

    <style name="TabLayoutStyle" parent="MainActivityTheme">
        <item name="colorAccent">@color/tab_accent</item>
    </style>
</resources>
